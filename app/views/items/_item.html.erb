<article class='item'>
  <div class='likes'>
    <%= button_to [:like, item], class: 'like-button' do %>
      <% if item.likes == 0 %>
        <%= image_tag('heart-empty-icon') %>
      <% else %>
        <%= image_tag('heart-full-icon') %>
        <% end %>
    <% end %>
    <p><%= item.likes %>
  </div>
  <%= image_tag(item.thumbnail_url) %>
  <div class='item-details'>
    <div class='item-title'>
     <h2><%= item.title %></h2>
    </div>
    <div class='user-details'>
      <div class='user-image-name'>
        <%= image_tag(item.user.display_picture) %>
        <p><%= item.user.name %></p>
      </div>
      <% if item.user.rating.present?%>
        <div class='user-rating'>
          <%= image_tag('rating-icon') %>
          <p><%= item.user.rating %></p>
        </div>
      <% end %>
    </div>
    <div class='item-distance-views'>
      <div class='item-detail'>
        <%= image_tag('distance-icon') %>
        <p><%= item.distance %>mi</p>
      </div>
      <div class='item-detail'>
        <%= image_tag('views-icon') %>
        <p><%= item.views %></p>
      </div>
    </div>
  </div>
</article>